@model BirdSighting
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Bird</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper.js/cjs/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <h1>Delete Sighting</h1>
    <h2>Confirm Deletion</h2>
    <h3>@Model.Name </h3>
    <form asp-action="DeleteSighting" method="post">
        <input type="hidden" asp-for="SightingID" />

        <button type="submit" class="btn btn-warning">Delete</button>
        <a asp-controller="BirdSighting" asp-action="Index"
           class="btn btn-dark">Cancel</a>
    </form>
</body>
</html>