@model BirdApp.Models.BirdSpeciesVM

@{
    ViewData["Title"] = "New";
}

<div class="col-md-10 mx-auto py-4">
    <div class="card">
        <div class="card-header bg-primary text-uppercase text-white">
            <h4>Add New Bird Species</h4>
        </div>
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="New">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ScientificName" class="control-label"></label>
                            <input asp-for="ScientificName" class="form-control" />
                            <span asp-validation-for="ScientificName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TypicalSize" class="control-label"></label>
                            <select asp-for="TypicalSize" class="form-control">
                                <!-- 0 = sparrow-sized, 1 = small, 2 = robin-sized, 3 = medium, 4 = crow-sized,  5 = large, 6 = goose-sized or larger-->
                                <option value="">Choose Size</option>
                                <option value="0">Sparrow-sized</option>
                                <option value="1">Small</option>
                                <option value="2">Robin-sized</option>
                                <option value="3">Medium</option>
                                <option value="4">Crow-sized</option>
                                <option value="5">Large</option>
                                <option value="6">Goose-sized or larger</option>
                            </select>
                            <span asp-validation-for="TypicalSize" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PrimaryColor" class="control-label"></label>
                            <input asp-for="PrimaryColor" class="form-control" />
                            <span asp-validation-for="PrimaryColor" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Habitat" class="control-label"></label>
                            <input asp-for="Habitat" class="form-control" />
                            <span asp-validation-for="Habitat" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="BirdSpeciesImage" class="control-label"></label>
                            <div class="custom-file">
                                <input asp-for="BirdSpeciesImage" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>
                            <span asp-validation-for="BirdSpeciesImage" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="submit" class="btn btn-sm btn-primary rounded-0 text-uppercase" />
                    <a asp-action="Index" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}  